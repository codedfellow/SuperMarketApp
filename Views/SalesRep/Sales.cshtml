@model List<Sales>

@{
    ViewData["Title"] = "Sales";
}

@if (Model.Count > 0)
{
    <div>
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Sales</h1>
            </div>
            <div class="card-body">
                <table id="tblList" class="table">
                    <thead>
                        <tr>
                            <th>
                                Sales Date
                            </th>
                            <th>
                                Amount
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SalesDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    <a asp-action="SaleDetail" asp-route-saleId="@item.Id" class="btn btn-info">See Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else { 
    <div>
        No sales yet
    </div>
}