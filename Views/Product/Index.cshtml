@model IEnumerable<SupermarketApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

    <div>
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Products</h1>

                <p>
                    <a asp-action="Create">Create New</a>
                </p>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Unit Price
                            </th>
                            <th>
                                Units in Stock
                            </th>
                            <th>
                                Image
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                                </td>
                                <td>
                                    @if (item.Picture != null)
                                    {
                                        var photoPath = "~/images/" + item.Picture;
                                        <img src="@photoPath" height="30" asp-append-version="true" />
                                    }
                                    else
                                    {
                                        <img src="~/images/perfume.jpg" height="30" />
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" 
                                       onclick="return confirm('Are you sure you want to delete this product')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
